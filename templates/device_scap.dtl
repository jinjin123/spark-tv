            </li>  
                                
          </ul>
        </section>
        <section id="scap_ui">
            <fieldset>
            <legend id="scap_name"></legend>
            <label for="argument">Argument</label>
            <textarea name="argument" id="scap_arg"></textarea>
            <button class="btn" onclick="scap_exec()">Execute</button>
            <label for="result">Result</label>
            <textarea name="result" id="scap_result"></textarea>
            </fieldset>              
        </section> 
        <!--
        <footer><p>footer</p></footer>
        -->
    <script type="text/javascript" src="/js/jquery-2.1.4.js"></script>
    <script type="text/javascript" src="/js/Math.uuid.js"></script>
    <script type="text/javascript" src="/js/wshell.js"></script>

    <script type="text/javascript">
        function scap_exec() {
            if (window.wshell) {
                var method = $('#scap_name').text();
                if (method) {
                      var arg = $('#scap_arg').text();
                      if (arg) {
                          window.wshell.scap($('#id').text(), method, JSON.parse(arg));
                      } else {
                          window.wshell.scap($('#id').text(), method);
                      }
                } else {
                    alert('Please choose a function first.');
                }
            } else {
                alert('Please connect to server first.');
            }
        }
        $(function () {
            window.wshell = new Wshell();
            window.wshell.connect("{{id}}.scap"); 
        });
    </script>
  </body>
</html> 
